
#user  nobody;
worker_processes  1;

#error_log  logs/error.log;
error_log stderr notice;
#error_log  logs/error.log  info;

#pid        logs/nginx.pid;


events {
    worker_connections  1024;
}

stream
{
	server
	{
	  listen 50001 ;
	  proxy_pass db2host:50000;
	}
	server
	{
	  listen 50000;
	  proxy_pass db2host:50001;
	}
}


http {
    include       mime.types;
    default_type  application/octet-stream;

    #log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
    #                  '$status $body_bytes_sent "$http_referer" '
    #                  '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /dev/stdout;

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    #gzip  on;

    server {
        #listen       80;
	listen       443 ssl;
        server_name  localhost;
        include ssl/self-signed.conf;
        include ssl/ssl-params.conf;

        server_name  localhost;
        proxy_set_header X-SOrigin $http_x_sorigin;

        #charset koi8-r;

        #access_log  logs/host.access.log  main;

        location / 
	{
	    proxy_pass https://dshost:8443;
            proxy_pass_request_headers on;
            proxy_set_header Referer $http_referer;
        }

 	location /rstudio/ 
	{
      		rewrite ^/rstudio/(.*)$ /$1 break;
      		proxy_pass http://rstudiohost:8787;
      		proxy_redirect http://rstudiohost:8787/ $scheme://$host:8080/rstudio/;
      		proxy_http_version 1.1;
    	}

        #error_page  404              /404.html;

